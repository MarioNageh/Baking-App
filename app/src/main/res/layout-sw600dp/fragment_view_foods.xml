<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_steps"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recycler_ingrident"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <FrameLayout

            android:layout_weight="1"
            android:id="@+id/video_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"></FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/material_stepper_step_active_title_margin_bottom"
            android:layout_weight="1"
            android:elevation="4dp"
            app:cardCornerRadius="5dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/txt_video_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/material_color_yellow_800"
                    android:padding="@dimen/material_stepper_step_active_title_margin_bottom"
                    android:text="- One Cupe"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/cardview_dark_background" />
            </ScrollView>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>